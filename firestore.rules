
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Gets user role from their profile document in Firestore.
    function getUserRole(userId) {
      let userDoc = get(/databases/$(database)/documents/users/$(userId));
      // If the user document or the rol field doesn't exist, return 'usuario' as a safe default.
      if (!('rol' in userDoc.data)) {
        return 'usuario';
      }
      return userDoc.data.rol;
    }

    function isAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'admin';
    }

    function isSupervisor() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'supervisor';
    }
    
    function isUsuario() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'usuario';
    }

    // ------------------------------------------------------------------------
    // Collection Rules
    // ------------------------------------------------------------------------

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    match /seguros/{seguroId} {
      // Any signed-in user can read insurance policies.
      allow read: if isSignedIn();
      
      // Allow creation for admins or supervisors.
      allow create: if isAdmin() || isSupervisor();

      // Allow updates if the user is an admin or supervisor.
      allow update: if isAdmin() || isSupervisor();
      
      // Only admins can delete.
      allow delete: if isAdmin();
      
      // Subcollection rules inherit the parent's logic for simplicity
      match /{allSubcollections}/{docId} {
        allow read: if isSignedIn();
        allow create: if isAdmin() || isSupervisor();
        allow update: if isAdmin() || isSupervisor();
        allow delete: if isAdmin();
      }
    }
  }
}
