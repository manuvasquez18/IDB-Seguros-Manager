rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    // Function to get the user's role from their profile document
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.rol;
    }

    function isAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'admin';
    }

    function isSupervisor() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'supervisor';
    }

    function isUsuario() {
        return isSignedIn() && getUserRole(request.auth.uid) == 'usuario';
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ------------------------------------------------------------------------
    // Collection Rules
    // ------------------------------------------------------------------------

    // Users can create their own profile, admins can manage any profile.
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Rules for the root 'seguros' collection and its subcollections
    match /seguros/{seguroId} {
      allow read: if isSignedIn();
      allow create: if isAdmin() || isSupervisor();
      allow update: if isAdmin() || isSupervisor();
      allow delete: if isAdmin();
      
      // Apply same rules to all subcollections of a seguro
      match /{allSubcollections}/{docId} {
        allow read: if isSignedIn();
        allow create: if isAdmin() || isSupervisor();
        allow update: if isAdmin() || isSupervisor();
        allow delete: if isAdmin();
      }
    }
  }
}
