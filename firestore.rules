rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    // NEW: Functions to get role from the user's auth token (custom claim)
    function isAdmin() {
      return isSignedIn() && request.auth.token.rol == 'admin';
    }

    function isSupervisor() {
      return isSignedIn() && request.auth.token.rol == 'supervisor';
    }

    function isUsuario() {
        return isSignedIn() && request.auth.token.rol == 'usuario';
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ------------------------------------------------------------------------
    // Collection Rules
    // ------------------------------------------------------------------------

    // User profiles can be read by any signed-in user.
    // Users can only create their own profile.
    // Users can update their own profile, or an admin can.
    // Only admins can delete profiles.
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Rules for the root 'seguros' collection and its subcollections
    match /seguros/{seguroId} {
      allow read: if isSignedIn();
      allow create: if isAdmin() || isSupervisor();
      allow update: if isAdmin() || isSupervisor();
      allow delete: if isAdmin();
      
      // Apply same rules to all subcollections of a seguro
      match /{allSubcollections}/{docId} {
        allow read: if isSignedIn();
        allow create: if isAdmin() || isSupervisor();
        allow update: if isAdmin() || isSupervisor();
        allow delete: if isAdmin();
      }
    }
  }
}
